{
  "name": "@zougui/common.config",
  "version": "0.1.0",
  "description": "",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "types": "lib/cjs/index.d.ts",
  "typings": "lib/cjs/index.d.ts",
  "scripts": {
    "start": "nodemon lib",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --collectCoverage",
    "compile": "concurrently -n cjs,esm \"npm:compile:cjs\" \"npm:compile:esm\"",
    "compile:watch": "concurrently -n cjs,esm \"npm:compile:cjs:watch\" \"npm:compile:esm:watch\"",
    "compile:cjs": "tsc --module commonjs --outDir lib/cjs --project .",
    "compile:cjs:watch": "npm run compile:cjs -- --watch",
    "compile:esm": "tsc --module esnext --outDir lib/esm --project .",
    "compile:esm:watch": "npm run compile:esm -- --watch",
    "clean": "rimraf -rf ./lib & rimraf -f tsconfig.tsbuildinfo",
    "build": "npm run clean && npm run compile",
    "prepublishOnly": "npm run build && npm run test:coverage"
  },
  "devDependencies": {
    "@types/flat": "^5.0.2",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.17",
    "@types/validator": "^13.7.2",
    "@zougui/common.jest-config": "workspace:^0.1.3",
    "@zougui/common.type-utils": "workspace:^0.1.0",
    "concurrently": "^7.2.1",
    "jest": "^27.5.1",
    "jest-date-mock": "^1.0.8",
    "jest-extended": "^2.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "type-fest": "^2.12.1",
    "typescript": "^4.5.4"
  },
  "keywords": [],
  "repository": "https://github.com/zougui1/z-monorepo/tree/main/templates/package",
  "author": "Zougui",
  "license": "ISC",
  "dependencies": {
    "@zougui/common.env": "workspace:^0.5.1",
    "@zougui/common.ms": "workspace:^0.1.1",
    "@zougui/common.object-utils": "workspace:^0.1.0",
    "@zougui/common.yup-utils": "workspace:^0.3.0",
    "chokidar": "^3.5.3",
    "flat": "^5.0.2",
    "fs-extra": "^10.0.1",
    "lodash": "^4.17.21",
    "validator": "^13.7.0",
    "yup": "^0.32.11"
  }
}
