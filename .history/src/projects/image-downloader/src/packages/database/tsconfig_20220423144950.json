{
  "compilerOptions": {
    "composite": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": false,
    "inlineSources": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2017",
    "plugins": [
      {
        "transform": "tst-reflect-transformer"
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.*"],
	"reflection": {
		"metadata": false,
		"debugMode": false
	}
}
